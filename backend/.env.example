# Backend Environment Configuration for Impact Bot v2
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/impact_bot_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Airtable Integration (Optional for local development)
# AIRTABLE_TOKEN=your_airtable_token_here
# AIRTABLE_BASE_ID=your_airtable_base_id_here

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_here

# LLM Integration (Required for Theory of Change document processing)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug
PORT=3003

# Feature Flags
ENABLE_MONITORING=false
ENABLE_VECTOR_SEARCH=false
ENABLE_ADVANCED_ANALYTICS=true

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_IRIS_DATA=86400

# LLM Configuration
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1
CONVERSATION_CONTEXT_LIMIT=10
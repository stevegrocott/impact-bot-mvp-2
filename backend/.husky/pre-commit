#!/usr/bin/env sh

echo "üîí Git Pre-Commit Hook: Running mandatory validation..."

# Check if we have the comprehensive validation script at project root
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
if [ -f "$PROJECT_ROOT/scripts/pre-commit-validation.sh" ]; then
  echo "üìù Running comprehensive validation from project root..."
  cd "$PROJECT_ROOT"
  ./scripts/pre-commit-validation.sh
else
  # Fallback to basic TypeScript check for backend only
  echo "üìù Basic TypeScript validation (backend only)..."
  # Ensure we're in the backend directory
  if [ ! -f "package.json" ]; then
    cd backend
  fi
  
  if ! npm run build >/dev/null 2>&1; then
    echo "‚ùå Backend TypeScript compilation failed!"
    echo "Please fix TypeScript errors before committing:"
    npm run build
    exit 1
  fi
  echo "‚úÖ Basic pre-commit checks passed!"
fi